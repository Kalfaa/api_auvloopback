{
  "name": "messages",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "msg": {
      "type": "string"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "viewed": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
      "receiver":{
          "type": "belongsTo",
          "model": "profile"
      },
      "sender":{
          "type":"belongsTo",
          "model": "profile"
      }
  },
  "acls": [
      {
        "accessType": "READ",
        "principalType": "ROLE",
        "principalId": "$everyone",
        "permission": "ALLOW"
      },
      {
        "accessType": "WRITE",
        "principalType": "ROLE",
        "principalId": "$everyone",
        "permission": "ALLOW"
      }
  ],
  "methods": {}
}
